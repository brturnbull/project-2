<h2>Edit your profile</h2>
<form class="col l12" action="/users/<%= user.id %>" method="post">
  <div class="input-field col l12">
    <input type="hidden" name="_method" value="PUT">
    <input type="text" name="username" id="username_field" value="<%= user.username %>">
    <label for="username_field">Username</label>
  </div>
  <div class="input-field col l12">
    <input type="text" name="profilephoto" id="profilephoto_field" value="<%= user.profilephoto %>">
    <label for="profilephoto_field">Profile Photo Url</label>
  </div>
  <div class="input-field col l12">
    <input type="email" name="email" id="email_field" value="<%= user.email %>">
    <label for="email_field">Email</label>
  </div>
  <div class="input-field col l12">
    <input type="text" name="bio" id="bio_field" value="<%= user.bio %>">
    <label for="bio_field">Tell us about yourself!</label>
  </div>
  <div class="input-field col l12">
    <button class="green btn">Save</button>
  </div>
</form>
